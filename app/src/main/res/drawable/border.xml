<!-- res/drawable/border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Border width and color -->
    <padding
        android:left="30dp"
        android:top="20dp"
        android:right="30dp"
        android:bottom="20dp" /> <!-- Padding inside the border -->
    <corners android:radius="4dp" /> <!-- Corner radius -->
</shape>
